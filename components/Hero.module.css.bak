.hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    background-image: url('/assets/hero_bg.png');
    background-size: cover;
    background-position: center;
    padding: var(--space-24) 0;
    overflow: hidden;
}

.overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(75deg, rgba(15, 23, 42, 0.85) 0%, rgba(15, 23, 42, 0.4) 100%);
    backdrop-filter: blur(8px);
    z-index: 1;
}

.hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 180px;
    background: linear-gradient(to bottom, transparent, var(--white));
    z-index: 5;
    pointer-events: none;
}

.container {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-12);
    align-items: center;
    position: relative;
    z-index: 10;
}

.content {
    max-width: 680px;
}

.badge {
    display: inline-flex;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
    color: var(--white);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: var(--space-6);
}

.title {
    font-family: var(--font-serif);
    font-size: clamp(3rem, 5vw, 4.5rem);
    line-height: 1.1;
    font-weight: 900;
    margin-bottom: var(--space-6);
    letter-spacing: -0.04em;
    color: var(--white);
}

.highlight {
    color: #60A5FA;
    font-style: italic;
    /* Added style variety */
}

.description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-8);
    max-width: 580px;
    line-height: 1.7;
}

.actions {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-16);
}

.primaryBtn {
    background-color: #2563EB !important;
    padding: 1rem 2rem !important;
    font-size: 1rem !important;
    border-radius: 8px !important;
}

.secondaryBtn {
    background-color: rgba(255, 255, 255, 0.1) !important;
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
    color: var(--white) !important;
    padding: 1rem 2rem !important;
    font-size: 1rem !important;
    border-radius: 8px !important;
    backdrop-filter: blur(4px);
}

.statsBar {
    display: flex;
    gap: var(--space-8);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.statItem {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
}

.icon {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

.statItem strong {
    display: block;
    color: var(--white);
    font-size: 0.9375rem;
}

.statSub {
    color: var(--text-light);
    font-size: 0.8125rem;
}

/* Premium Card */
.cardContainer {
    display: flex;
    justify-content: center;
}

.pipelineCard {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    width: 100%;
    max-width: 440px;
    box-shadow: var(--shadow-xl), 0 0 0 1px rgba(0, 0, 0, 0.05);
    position: relative;
}

.cardHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
}

.cardHeader h3 {
    font-size: 1.125rem;
    color: var(--primary-navy);
}

.statusBadge {
    color: #10B981;
    background: #D1FAE5;
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 700;
}

.stepList {
    list-style: none;
    position: relative;
}

.stepItem,
.stepItemActive,
.stepItemPending {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    position: relative;
}

.stepItem::before {
    content: '';
    position: absolute;
    left: 17px;
    top: 36px;
    width: 2px;
    height: 24px;
    background: #E2E8F0;
}

.stepItem:last-child::before {
    display: none;
}

.stepIcon {
    width: 36px;
    height: 36px;
    background: var(--bg-slate);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    z-index: 2;
}

.stepItemActive .stepIcon {
    background: var(--accent-light-blue);
    color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.stepContent strong {
    display: block;
    font-size: 0.9375rem;
    color: var(--primary-navy);
}

.stepContent p {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-top: 2px;
}

.check {
    margin-left: auto;
    color: #10B981;
}

.savingsCard {
    position: absolute;
    bottom: -24px;
    right: -24px;
    background: var(--primary-red);
    color: var(--white);
    padding: var(--space-6);
    border-radius: var(--radius-md);
    box-shadow: 0 20px 25px -5px rgb(220 38 38 / 0.4);
    width: 180px;
    animation: float 6s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }
}

.savingsValue {
    font-size: 1.875rem;
    font-weight: 900;
    margin: 0.25rem 0;
}

.savingsText p {
    font-size: 0.75rem;
    opacity: 0.9;
    font-weight: 500;
}

@media (max-width: 1024px) {
    .container {
        grid-template-columns: 1fr;
        text-align: center;
    }

    .content {
        margin: 0 auto;
    }

    .actions {
        justify-content: center;
    }

    .statsBar {
        flex-wrap: wrap;
        justify-content: center;
    }

    .cardContainer {
        margin-top: var(--space-12);
    }
}
